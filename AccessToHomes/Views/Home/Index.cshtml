@model AccessToHomes.Models.ViewModels.HomeVM
@{
    ViewBag.Title = "Home Page";
}

<style>
    .center-div {
        position: absolute;
        margin: auto;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        width: 300px;
        height: 100px;
        border-radius: 3px;
    }
</style>

@using (Html.BeginForm("Map", "Listing", FormMethod.Post, new { id = "form1" }))
{
    <div class="center-div">
        <h2>Search Location</h2>
        @Html.TextBoxFor(m => Model.Location, new { @class = "form-control" })
        @Html.DropDownListFor(model => model.Distance, Model.DistanceList, "Within....", new { @class = "selectpicker form-control" })
        <div>
            <input type="submit" value="Search" class="form-control" />
        </div>
    </div>

}


